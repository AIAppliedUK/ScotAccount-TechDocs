{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve Eleventy Development",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/eleventy",
      "args": ["--serve", "--watch"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "Install Dependencies"
    },
    {
      "name": "Build Eleventy Production",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/eleventy",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "production"
      },
      "preLaunchTask": "Install Dependencies"
    },
    {
      "name": "Serve Production Build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/http-server",
      "args": ["_site", "-p", "8080", "-o"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Site"
    }
  ]
}
